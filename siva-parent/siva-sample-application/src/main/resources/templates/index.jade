extends layout/main-layout

block content
    .row
        .col-md-12
            h1 Upload a digitally signed file
            form(action="/upload", method="POST", enctype="multipart/form-data")
                .form-group
                    input(type="file", name="file")
                .form-group
                    button(type="submit")#validate-btn.btn.btn-primary Validate
    if overallValidationResult != null && !documentName.isEmpty()
        .row
            .col-md-12
                h1 Overall validation result
                p Document&nbsp;
                    strong= documentName
                    |&nbsp;is&nbsp;
                    strong(class="validation-result "  + overallValidationResult.toLowerCase())= overallValidationResult
    .row
        .col-md-12
            h1 Validation report
            if validationResult != null
                pre.prettyprint= validationResult
    if buildInfo.github != null
        .row.footer
            .col-md-12
                hr
                span Git commit:&nbsp;
                    a(href=buildInfo.github.url, target="_blank")= buildInfo.github.shortHash
                span &nbsp;TravisCI build number:&nbsp;
                    a(href=buildInfo.travisCi.buildUrl, target="_blank")= buildInfo.travisCi.buildNumber

